<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_liner"
    tools:context=".Rooms">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" rooms"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:textColor="#BB8FCE"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="room1"
            android:textSize="20dp"
            android:textColor="#4A235A"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_background"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_light_off_48" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="light"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"/>

                <Switch
                    android:id="@+id/switch_light_room_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#BB8FCE"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="10dp"
                    android:onClick="updateLightRoom1"/>
            </LinearLayout>


        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="room2"
            android:textSize="20dp"
            android:textColor="#4A235A"
            android:layout_marginLeft="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_background"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_light_off_48" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="light"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"/>

                <Switch
                    android:id="@+id/switch_light_room_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#BB8FCE"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="10dp"
                    android:onClick="updateLightRoom2"/>
            </LinearLayout>

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="room3"
            android:textSize="20dp"
            android:textColor="#4A235A"
            android:layout_marginLeft="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_background"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_light_off_48" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="light"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"/>

                <Switch
                    android:id="@+id/switch_light_room_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#BB8FCE"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="10dp"
                    android:onClick="updateLightRoom3"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</ScrollView>
